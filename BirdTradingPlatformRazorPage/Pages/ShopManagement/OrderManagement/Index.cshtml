@page
@model BirdTradingPlatformRazorPage.Pages.ShopManagement.OrderManagement.IndexModel

@{
    ViewData["Title"] = "Order Report";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Order Report</h2>
                    <div class="breadcrumb__option">
                        <span>Home</span>
                        <span>Order Report</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<div class="d-flex flex-row mt-5 mb-5 justify-content-between">
    <div class="w-50"></div>
    <div class="w-50">
        <form method="get">
            <div class="input-group">
                <input type="text" class="form-control mr-2" name="SearchString"
                       placeholder="Search by Order Id" value="" />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Total</th>
            <th>OrderDate</th>
            <th>ShippedDate</th>
            <th>OrderParent</th>
            <th>PaymentMethod</th>
            <th>Status</th>
            <th>PaymentStatus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.orderDTO.Count; i++)
        {
            <tr>
                <td>@Model.userDTO[i].FullName</td>
                <td>@Model.orderDTO[i].Total</td>
                <td>@Model.orderDTO[i].OrderDate</td>
                <td>@Model.orderDTO[i].ShippedDate</td>
                <td>@Model.orderDTO[i].OrderParentId</td>
                <td>@Model.orderDTO[i].PaymentType</td>
                <td>@Model.orderDTO[i].Status</td>
                <td>@Model.orderDTO[i].PaymentStatus</td>
                <td>
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@Model.orderDTO[i].OrderId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@page
@model BirdTradingPlatformRazorPage.Pages.ShopManagement.ProductManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="container">
    @*<div class="col-md-4">*@
    <form method="post" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            @*<input type="hidden" asp-for="productDTO.ProductId" />*@
            <div class="form-group">
                <label asp-for="productDTO.CategoryId" class="control-label"><span style="color:red">*</span>Category</label>
                <select asp-for="productDTO.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="productDTO.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.ProductName" class="control-label"><span style="color:red">*</span>Product Name</label>
                <input placeholder="product name" asp-for="productDTO.ProductName" class="form-control" />
                <span asp-validation-for="productDTO.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.UnitPrice" class="control-label"><span style="color:red">*</span>Unit Price</label>
                <input placeholder="unit price (>= 0.01)" type="number" min="0.01" step="0.01" asp-for="productDTO.UnitPrice" class="form-control" />
                <span asp-validation-for="productDTO.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Quantity" class="control-label"><span style="color:red">*</span>Quantity</label>
                <input placeholder="quantity (>= 1)" type="number" min="1" asp-for="productDTO.Quantity" class="form-control" />
                <span asp-validation-for="productDTO.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Species" class="control-label">Species (optional)</label>
                <input placeholder="species" asp-for="productDTO.Species" class="form-control" />
                <span asp-validation-for="productDTO.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Age" class="control-label">Age (optional)</label>
                <input placeholder="age (years | months | days | ...)" asp-for="productDTO.Age" class="form-control" />
                <span asp-validation-for="productDTO.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Size" class="control-label">Size (optional)</label>
                <input placeholder="size" asp-for="productDTO.Size" class="form-control" />
                <span asp-validation-for="productDTO.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Weight" class="control-label"><span style="color:red">*</span>Weight in grams</label>
                <input min="1" placeholder="product weight (>= 1)" asp-for="productDTO.Weight" class="form-control" />
                <span asp-validation-for="productDTO.Weight" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="productDTO.Expiration" class="control-label">Expired Date (optional)</label>
                <input placeholder="expired date" asp-for="productDTO.Expiration" class="form-control" />
                <span asp-validation-for="productDTO.Expiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.MadeIn" class="control-label">Made In (optional)</label>
                <input placeholder="made in" asp-for="productDTO.MadeIn" class="form-control" />
                <span asp-validation-for="productDTO.MadeIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Gender" class="control-label">Gender (optional)</label>
                <input placeholder="gender" asp-for="productDTO.Gender" class="form-control" />
                <span asp-validation-for="productDTO.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Color" class="control-label">Color (optional)</label>
                <input placeholder="color" asp-for="productDTO.Color" class="form-control" />
                <span asp-validation-for="productDTO.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Material" class="control-label">Material (optional)</label>
                <input placeholder="material" asp-for="productDTO.Material" class="form-control" />
                <span asp-validation-for="productDTO.Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.Description" class="control-label"><span style="color:red">*</span>Description</label>
                <input placeholder="description" asp-for="productDTO.Description" class="form-control" />
                <span asp-validation-for="productDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.BrandName" class="control-label">Brand (optional)</label>
                <input placeholder="brand" asp-for="productDTO.BrandName" class="form-control" />
                <span asp-validation-for="productDTO.BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.ProductImage" class="control-label"><span style="color:red">*</span>Image URL</label>
                <input placeholder="image URL" asp-for="productDTO.ProductImage" class="form-control" />
                <span asp-validation-for="productDTO.ProductImage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group text-center col-md-12">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
    @*</div>*@
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@model BirdTradingPlatformRazorPage.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Shop";
}


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Bird Shop</h2>
                    <div class="breadcrumb__option">
                        <a href="./index.html">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>Category</h4>
                        <ul>
                            <li>
                                <a asp-page="./Index" 
                                    asp-route-pageIndex="1"
                                    asp-route-minPrice="@Model.MinPrice"
                                    asp-route-maxPrice="@Model.MaxPrice"
                                    asp-route-color="@Model.BirdColor"
                                    asp-route-country="@Model.Country">
                                    All
                                </a>
                            </li>
                            @foreach(var item in Model.Categories)
                            {
                                <li>
                                    <a asp-page="./Index" 
                                        asp-route-categoryId="@item.CategoryId" 
                                        asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                        asp-route-minPrice="@Model.MinPrice"
                                        asp-route-maxPrice="@Model.MaxPrice"
                                       asp-route-color="@Model.BirdColor"
                                       asp-route-country="@Model.Country">
                                        @item.CategoryName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="sidebar__item">
                        <h4>Price</h4>
                        <ul>
                            <li>
                                <a asp-page="./Index" 
                                    asp-route-minPrice="0" 
                                    asp-route-maxPrice="50"
                                    asp-route-categoryId="@Model.Category.CategoryId" 
                                    asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-color="@Model.BirdColor"
                                   asp-route-country="@Model.Country">
                                    $0 - $50
                                </a>
                            </li>
                            <li>
                                <a asp-page="./Index" 
                                    asp-route-minPrice="50" 
                                    asp-route-maxPrice="100"
                                    asp-route-categoryId="@Model.Category.CategoryId"
                                    asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-color="@Model.BirdColor"
                                   asp-route-country="@Model.Country">
                                    $50 - $100
                                </a>
                            </li>
                            <li>
                                <a asp-page="./Index" 
                                    asp-route-minPrice="100" 
                                    asp-route-maxPrice="200"
                                    asp-route-categoryId="@Model.Category.CategoryId"
                                    asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-color="@Model.BirdColor"
                                   asp-route-country="@Model.Country">
                                    $100 - $200
                                </a>
                            </li>
                            <li>
                                <a asp-page="./Index" 
                                    asp-route-minPrice="200"
                                    asp-route-categoryId="@Model.Category.CategoryId"
                                    asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-color="@Model.BirdColor"
                                   asp-route-country="@Model.Country">
                                    > $200
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="sidebar__item sidebar__item__color--option">
                        <h4>Colors</h4>
                        <div class="w-100">
                            <div class="order-first">
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice" 
                                   asp-route-color="black" 
                                   asp-route-country="@Model.Country" class="btn btn-dark text-white w-25">Black</a>
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-color="white" 
                                   asp-route-country="@Model.Country" class="btn btn-light w-25">White</a>
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-color="red" 
                                   asp-route-country="@Model.Country" class="btn btn-danger text-white w-25">Red</a>
                            </div>
                            <div class="order-second mt-3">
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-color="yellow"
                                   asp-route-country="@Model.Country" class="btn btn-warning text-white w-25">Yellow</a>
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-color="grey"
                                   asp-route-country="@Model.Country" class="btn btn-secondary text-white w-25">Grey</a>
                                <a asp-page="./Index"
                                   asp-route-categoryId="@Model.Category.CategoryId"
                                   asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                                   asp-route-minPrice="@Model.MinPrice"
                                   asp-route-maxPrice="@Model.MaxPrice"
                                   asp-route-color="blue" 
                                   asp-route-country="@Model.Country" class="btn btn-primary text-white w-25">Blue</a>
                            </div>
                        </div>
                    </div>
                    <div class="sidebar__item sidebar__item__color--option">
                        <h4>Come From</h4>
                        <div class="w-100">
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="japan" class="btn btn-outline-secondary w-100 mt-1">Japan</a>
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="indonesia" class="btn btn-outline-secondary w-100 mt-1">Indonesia</a>
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="korea" class="btn btn-outline-secondary w-100 mt-1">Korea</a>
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="thailand" class="btn btn-outline-secondary w-100 mt-1">Thailand</a>
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="australia" class="btn btn-outline-secondary w-100 mt-1">Australia</a>
                            <a asp-page="./Index"
                               asp-route-categoryId="@Model.Category.CategoryId"
                               asp-route-pageIndex="@Model.PaginatedProducts.PageIndex"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-color="@Model.BirdColor"
                               asp-route-country="america" class="btn btn-outline-secondary w-100 mt-1">America</a>
                        </div>
                    </div>
                    <div class="sidebar__item">
                        <div class="latest-product__text">
                            <h4>Latest Products</h4>
                            <div class="latest-product__slider owl-carousel">
                                <div class="pl-1 latest-prdouct__slider__item">
                                    @foreach (var item in Model.Top3LatestProducts)
                                    {
                                        <a asp-page="/Detail/Index" asp-route-id="@item.ProductId" class="latest-product__item">
                                            <div class="latest-product__item__pic w-50">
                                                <img class="img-fluid" src="@item.ProductImage" alt="">
                                            </div>
                                            <div class="latest-product__item__text">
                                                <h6>@item.ProductName</h6>
                                                <span>$ @item.UnitPrice</span>
                                            </div>
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="row">
                    @foreach (var item in Model.PaginatedProducts)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <a asp-page="/Detail/Index" asp-route-id="@item.ProductId">
                                    <div class="product__item__pic set-bg" data-setbg="@item.ProductImage"></div>
                                </a>
                                <div class="product__item__text">
                                    <a class="btn btn-info text-white w-100" 
                                        asp-route-productId="@item.ProductId" 
                                        asp-page-handler="AddToCart">Add to Cart</a>
                                </div>
                                <div class="product__item__text">
                                    <h5 class="mb-2">Shop Name: @item.ShopName</h5>
                                    <h6 class="mb-2">Category: @item.ProductName</h6>
                                    <h6><a asp-page="/Detail/Index" asp-route-id="@item.ProductId">@item.ProductName</a></h6>
                                    <h5>$ @item.UnitPrice</h5>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @{
                    var prevDisabled = !Model.PaginatedProducts.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.PaginatedProducts.HasNextPage ? "disabled" : "";
                }
                <div class="product__pagination float-right">
                    <a asp-page="./Index" 
                       asp-route-pageIndex="@(Model.PaginatedProducts.PageIndex-1)"
                       asp-route-categoryId="@Model.Category.CategoryId"
                       asp-route-minPrice="@Model.MinPrice"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-color="@Model.BirdColor"
                       asp-route-country="@Model.Country" class="@prevDisabled">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    @for(int i = 1; i <= Model.PaginatedProducts.TotalPages; i++)
                    {
                        <a asp-page="./Index" 
                           asp-route-pageIndex="@i" 
                           asp-route-categoryId="@Model.Category.CategoryId"
                           asp-route-minPrice="@Model.MinPrice"
                           asp-route-maxPrice="@Model.MaxPrice"
                           asp-route-color="@Model.BirdColor"
                           asp-route-country="@Model.Country">@i</a>
                    }
                    <a asp-page="./Index" 
                       asp-route-pageIndex="@(Model.PaginatedProducts.PageIndex+1)"
                       asp-route-categoryId="@Model.Category.CategoryId" class="@nextDisabled"
                       asp-route-minPrice="@Model.MinPrice"
                       asp-route-maxPrice="@Model.MaxPrice"
                       asp-route-color="@Model.BirdColor"
                       asp-route-country="@Model.Country">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>